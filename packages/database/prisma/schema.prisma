// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output = "../generated/client"
}

model User {
  id      Int     @id
  username    String
  email       String
  password    String
  freeBalance     Float    @default(0)
  proceedsBalance Float    @default(0)
  lockerBalance   Float    @default(0)
  orders  Order[]
}

model Order {
  id        Int        @id
  type      OrderType
  user      User       @relation(fields: [userId], references: [id])
  userId    Int
  positions Position[]
}

model Position {
  id                String @id
  assets            String
  quantity          Float
  currentAssetPrice Float
  leverage          Float
  margin            Float
  stopLoss          Float
  takeProfit        Float
  proceeds          Float?
  order             Order  @relation(fields: [orderId], references: [id])
  orderId           Int
}

enum OrderType {
  Short
  Long
}
